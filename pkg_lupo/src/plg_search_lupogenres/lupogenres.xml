<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
	<name>plg_search_lupogenres</name>
	<author>Stefan Bauer</author>
	<creationDate>Oktober 09, 2024</creationDate>
	<copyright>Copyright (C) databauer / Stefan Bauer</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>stefan@databauer.ch</authorEmail>
	<authorUrl>https://www.ludothekprogramm.ch</authorUrl>
	<version>4.4.5</version>
	<description>PLG_SEARCH_LUPOGENRES_XML_DESCRIPTION</description>
	
	<files>
		<filename plugin="lupogenres">lupogenres.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB.plg_search_lupogenres.ini</language>
		<language tag="en-GB">language/en-GB.plg_search_lupogenres.sys.ini</language>
		<language tag="de-DE">language/de-DE.plg_search_lupogenres.ini</language>
		<language tag="de-DE">language/de-DE.plg_search_lupogenres.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
				<field name="Itemid"
					   type="menuitem"
					   filter="integer"
					   label="Itemid">
					<option value="0">PLG_SEARCH_LUPOGENRES_SELECT_MENU_ITEMID</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
